# Azure DevOps Configuration (Required)
AZURE_DEVOPS_PAT=your_personal_access_token_here
AZURE_DEVOPS_ORGANIZATION=emstas
AZURE_DEVOPS_PROJECT=Program Unify

# Claude API Configuration (Required)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-opus-4-1-20250805

# Synapse Configuration (Optional - for schema validation)
SYNAPSE_WORKSPACE=your_synapse_workspace_name
SYNAPSE_DATABASE=your_default_database

# Storage Configuration (Optional - for direct file access)
STORAGE_ACCOUNT_NAME=your_storage_account_name
STORAGE_CONTAINER=your_container_name

# Plugin Configuration
# Hook logs directory (defaults to ~/.claude/hook_logs)
HOOK_LOGS_DIR=${HOME}/.claude/hook_logs

# Orchestrator settings
ORCHESTRATOR_MAX_AGENTS=5
ORCHESTRATOR_TIMEOUT_SECONDS=300

# Agent Configuration
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=120

# Logging
LOG_LEVEL=INFO
